{{block "content" .}}
    <input class="form-control" type="search"
           name="search" placeholder="Begin Typing To Search Users..."
           hx-get="/question-list"
           hx-trigger="input changed delay:500ms, search"
           hx-target="#question-list"
           hx-indicator=".htmx-indicator">
    <span class="htmx-indicator"><img src="static/favicon.ico" alt="searching"/> Searching...</span>
    <table>
        <thead>
        <tr>
            <th>Rule</th>
            <th>Rule Name</th>
            <th>Rule Question Number</th>
            <th>Question</th>
        </tr>
        </thead>
        <tbody class="question-list" id="question-list">
        </tbody>
    </table>
{{end}}