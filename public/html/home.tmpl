{{block "content" .}}
    <label>
        <input class="search-bar" type="search"
               name="search" placeholder="Begin Typing To Search..."
               hx-get="/question-list"
               hx-trigger="load, input changed delay:500ms, search"
               hx-target="#question-list">
    </label>
    <div class="table-container">
        <table class="questions-table">
            <colgroup>
                <col class="index-col"/>
                <col class="question-col"/>
                <col class="rule-col"/>
                <col class="question-number-col"/>
            </colgroup>
            <thead>
            <tr>
                <th></th>
                <th>Question</th>
                <th>Rule Name</th>
                <th>Rule Question Number</th>
            </tr>
            </thead>
            <tbody id="question-list">
            </tbody>
        </table>
    </div>
{{end}}